<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nwe_isee_app">

    <!-- Erforderlich, damit Google Map Tiles geladen werden können -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Optional: In-App Billing -->
    <uses-permission android:name="com.android.vending.BILLING"/>

    <application
        android:label="nwe_isee_app"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- Dein Google Maps API-Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDjlwPIBPwetbyUf3-rdoWimTRPD3qeSGc"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Flutter-Start-Theme -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme"/>

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Flutter-Embedding Version -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2"/>
    </application>

    <!-- Für Text-Process Plugin (optional) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>